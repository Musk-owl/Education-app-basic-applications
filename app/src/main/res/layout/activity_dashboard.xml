<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Decorative blue illustration header (SVG/PNG/ImageView) -->
    <ImageView
        android:id="@+id/dashboard_header"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mainbkg" />

    <ImageButton
        android:id="@+id/logout_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="@id/dashboard_header"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:backgroundTint="#E3E8FF"
        android:tint="#6276FF"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_lock_power_off"
        android:contentDescription="Logout"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="18dp"
        app:layout_constraintTop_toBottomOf="@id/dashboard_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title/Greeting -->
            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:fontFamily="@font/libertinusmono_regular"
                android:textSize="24sp"
                android:textColor="#6276FF"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here's your learning progress"
                android:fontFamily="@font/robotoserif_variablefont_grad_opsz_wdth_wght"
                android:textSize="16sp"
                android:textColor="#6276FF"
                android:layout_marginBottom="18dp"/>

            <!-- Actions Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F5F7FF"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                android:layout_marginBottom="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/browse_courses_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Browse\nCourses"
                        android:fontFamily="@font/libertinusmono_regular"
                        android:textColor="#6276FF"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:backgroundTint="#E3E8FF"
                        app:cornerRadius="14dp"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/notes_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="My\nNotes"
                        android:fontFamily="@font/libertinusmono_regular"
                        android:textColor="#6276FF"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:backgroundTint="#E3E8FF"
                        app:cornerRadius="14dp"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/music_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Focus\nMusic"
                        android:fontFamily="@font/libertinusmono_regular"
                        android:textColor="#6276FF"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:backgroundTint="#E3E8FF"
                        app:cornerRadius="14dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Progress Bar Section -->
            <ProgressBar
                android:id="@+id/dashboard_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:indeterminateTint="#6276FF"
                android:layout_marginBottom="18dp"/>

            <!-- Courses Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="#F7F9FC"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Enrolled Courses"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#6276FF"
                        android:fontFamily="@font/libertinusmono_regular"
                        android:layout_marginBottom="10dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/enrolled_courses_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="10dp" />

                    <TextView
                        android:id="@+id/empty_courses_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No courses enrolled yet.\nBrowse courses to get started!"
                        android:textAlignment="center"
                        android:textColor="#6276FF"
                        android:fontFamily="@font/robotoserif_variablefont_grad_opsz_wdth_wght"
                        android:textSize="15sp"
                        android:padding="14dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
